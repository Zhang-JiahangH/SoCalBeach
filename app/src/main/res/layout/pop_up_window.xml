<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15sp"
        android:background="@drawable/layout_bg">

        <ImageButton
            android:id="@+id/imgBtn_popup_back"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.035"
            app:srcCompat="@drawable/ic_baseline_back_24"
            app:tint="#000000" />

        <TextView
            android:id="@+id/tv_pop_up_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/allerta"
            android:padding="10sp"
            android:text="testname"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_beach_popup_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.035"
            android:text="testAddress" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btn_beach_popup_direction"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_weight="0.5"
                android:text="Direction"
                app:backgroundTint="#128FFB" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    "
                />

            <Button
                android:id="@+id/btn_beach_popup_restaurant"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_weight="0.5"
                android:text="Restaurant" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_beach_popup_openhour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.035"
            android:text="Test open hour: 3-5" />

        <TextView
            android:id="@+id/tv_pop_up_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="testrating"
            android:fontFamily="@font/allerta"
            android:padding="10sp"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.035"
            android:text="Leave your rating to help others" />
        <RatingBar
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:saveEnabled="true"
            android:isIndicator="false"
            android:numStars="5"
            android:stepSize="0.5" />

        <EditText
            android:id="@+id/comments"
            android:layout_width="320dp"
            android:layout_height="55dp"
            android:hint="comments"
            android:inputType="textLongMessage"
            android:padding="15dp"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.035"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_beach_popup_anonymous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:text="anonymous?" />

            <Button
                android:id="@+id/btn_beach_popup_submitRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Submit"
                android:textColor="#434343"
                app:backgroundTint="#FFFFFF" />


        </LinearLayout>

    </LinearLayout>
</ScrollView>